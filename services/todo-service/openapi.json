{
  "openapi": "3.0.3",
  "info": {
    "title": "Todo",
    "description": "This is the API docs of the todo API.",
    "termsOfService": "http://swagger.io/terms/",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "version": "1.0.0"
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  },
  "paths": {
    "/todo/{todoId}": {
      "get": {
        "summary": "Find an Todo by ID",
        "description": "Returns a single todo",
        "operationId": "getTodoById",
        "parameters": [
          {
            "name": "todoId",
            "in": "path",
            "description": "ID of todo to return",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "400": {
            "description": "Invalid ID",
            "content": {}
          },
          "404": {
            "description": "Todo not found",
            "content": {}
          }
        }
      }
    },
    "/todo": {
      "post": {
        "summary": "Add a new Todo",
        "description": "Returns a single todo",
        "operationId": "addTodo",
        "requestBody": {
          "description": "New Todo To Add",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Todo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Todo"
                }
              }
            }
          },
          "400": {
            "description": "User Not Found",
            "content": {}
          },
          "404": {
            "description": "User Not Found",
            "content": {}
          },
          "500": {
            "description": "Unknown error occured",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Todo": {
        "type": "object",
        "required": ["userId", "title"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string",
            "format": "string"
          },
          "userId": {
            "type": "integer",
            "format": "int64"
          }
        }
      }
    }
  }
}
